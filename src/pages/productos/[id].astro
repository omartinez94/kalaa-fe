---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import menuDataImport from "../../data/menu.json";
import type { MenuItem } from "../../types/menu";

export function getStaticPaths() {
    const allItems = Object.values(menuDataImport).flat();
    return allItems
        .filter((item: MenuItem) => item.slug != undefined)
        .map((item: MenuItem) => ({
            params: { id: item.slug },
            props: { item },
        }));
}

interface Props {
    item: MenuItem;
}

const { item } = Astro.props;

if (!item) {
    return Astro.redirect("/menu");
}
---

<Layout title={item.nombre}>
    <Header />
    <div class="mb-8">
        <a
            href="/menu"
            class="text-amber-400 hover:text-amber-300 flex items-center gap-2 transition-colors"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="m15 18-6-6 6-6"></path>
            </svg>
            Volver al Menú
        </a>
    </div>

    <div class="glass overflow-hidden rounded-2xl shadow-2xl">
        {
            item.imagen && (
                <div class="w-full h-64 md:h-96 relative">
                    <img
                        src={item.imagen}
                        alt={item.nombre}
                        class="w-full h-full object-cover"
                    />
                    <div class="absolute bottom-6 left-8 md:left-12">
                        <span class="text-6xl drop-shadow-lg">
                            {item.emoji}
                        </span>
                    </div>
                </div>
            )
        }
        <div class="p-8 md:p-12">
            <div
                class="flex flex-col md:flex-row justify-between items-start gap-6 mb-8"
            >
                <div>
                    {
                        !item.imagen && (
                            <span class="text-4xl mb-4 block">
                                {item.emoji}
                            </span>
                        )
                    }
                    <h1
                        class="text-4xl md:text-5xl font-bold text-white mb-2 leading-tight"
                    >
                        {item.nombre}
                    </h1>
                    <div class="h-1 w-20 bg-amber-400 rounded-full"></div>
                </div>
                <div
                    class="text-3xl font-bold text-amber-400 bg-amber-400/10 px-6 py-3 rounded-xl border border-amber-400/20"
                >
                    ${item.precio.toFixed(2)}
                </div>
            </div>

            <div class="prose prose-invert prose-lg max-w-none">
                <p class="text-gray-300 leading-relaxed text-xl">
                    {item.descripcion}
                </p>
            </div>

            {
                item.gallery && item.gallery.length > 0 && (
                    <div class="mt-12">
                        <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="text-amber-400"
                            >
                                <rect
                                    width="18"
                                    height="18"
                                    x="3"
                                    y="3"
                                    rx="2"
                                    ry="2"
                                />
                                <circle cx="9" cy="9" r="2" />
                                <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21" />
                            </svg>
                            Galería
                        </h2>
                        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                            {item.gallery.map((img: string) => (
                                <div class="aspect-square overflow-hidden rounded-xl border border-white/10 hover:border-amber-400/50 transition-colors group">
                                    <img
                                        src={img}
                                        alt={`${item.nombre} gallery view`}
                                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                    />
                                </div>
                            ))}
                        </div>
                    </div>
                )
            }

            <div
                class="mt-12 pt-8 border-t border-white/10 flex flex-wrap gap-4"
            >
                <button
                    class="bg-amber-400 hover:bg-amber-300 text-black font-bold py-4 px-8 rounded-xl transition-all active:scale-95 shadow-lg shadow-amber-400/20"
                >
                    Ordenar Ahora
                </button>
                <button
                    class="bg-white/5 hover:bg-white/10 text-white border border-white/10 font-bold py-4 px-8 rounded-xl transition-all active:scale-95"
                >
                    Personalizar
                </button>
            </div>
        </div>
    </div>

    <div class="mt-12 text-center text-gray-500 text-sm">
        <p>
            Todos nuestros platillos son preparados con ingredientes frescos y
            de la más alta calidad.
        </p>
    </div>
</Layout>

<style>
    h1 {
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    }
</style>
